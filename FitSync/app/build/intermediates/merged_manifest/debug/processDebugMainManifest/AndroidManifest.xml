<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.Ft.fitsync"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <!-- Permissão necessária para acessar o sensor de passos -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.br.Ft.fitsync.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.br.Ft.fitsync.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.FitSync" >
        <activity
            android:name="com.br.Ft.fitsync.LancheActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.SuplementosActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.CafeActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.RefeicaoActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.LegsActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.ArmsActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.ChestActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.TreinoBack"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.Register"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.FormLogin"
            android:exported="false" />
        <activity
            android:name="com.br.Ft.fitsync.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Receiver para redefinir a contagem de passos à meia-noite -->
        <receiver android:name="com.br.Ft.fitsync.MidnightResetReceiver" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.br.Ft.fitsync.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>